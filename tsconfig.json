{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020", "DOM"], // DOM is generally not needed for pure Node.js backend
    "rootDir": "./", // Source files are directly in the root of the backend folder
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "server.ts", // Include the main server file
    "models/**/*.ts", // Include all .ts files in models folder
    "routes/**/*.ts", // Include all .ts files in routes folder
    "utils/**/*.ts", // Include all .ts files in utils folder
    "db/**/*.ts" // Include all .ts files in db folder
    // If you have any other top-level .ts files, list them here or add a wildcard
  ],
  "exclude": ["node_modules", "dist"]
}
